{
  "compilerOptions": {
    "baseUrl": "./src/",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "./dist",
    "types": ["node"],

    // There's an issue with the types on node-fetch@2 where its `AbortSignal` type now clash
    // with `@types/node`.
    //
    // https://github.com/node-fetch/node-fetch/issues/1652
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"]
}
